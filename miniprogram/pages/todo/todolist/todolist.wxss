.main {
  background: #efeff4;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.section {
  /* margin-top: 10rpx; */
}

.todo-section {
  /* border-bottom: #efeff4 1px solid;
  border-top: #d9d9d9 1px solid; */
  background-color: #fff;
}

.todo-section .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  text-align: left;
  color: #344349;
  font-size: 32rpx;
  position: relative;
  
}

.todo-section .item-inner {
  flex:1;
  /* border-bottom: #d9d9d9 1px solid; */
  height: 91rpx;
  line-height: 91rpx;
  margin-left: 2%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.todo-section .item:last-child .item-inner {
  border: none;
}

.todo-section .level0{
  background-color: #f00;
  color: #f00;
  width: 1%;
  height: 92rpx;
}
.todo-section .level1{
  background-color:#39aff1;
  color: #39aff1;
  width: 1%;
  height: 92rpx;
}
.todo-section .level2{
  background-color: #8663ec;
  color: #8663ec;
  width: 1%;
  height: 92rpx;
}
.todo-section .level3{
  background-color:#93ec63;
  color:#93ec63;
  width: 1%;
  height: 92rpx;
}
.status {
  color: #1f1f1f;
  font-size: 30rpx;
  font-weight: 500;
  margin: 30rpx;
}

.item-title{

}

.text-finished {
  color: #6d6d72;
}

.checkbox {
  color: white !important;

}

.arrow {
  height: 28rpx;
  width: 28rpx;
  margin-left: 30rpx;
  margin-right: 25rpx;
}




.del-todo {
  float:right;
  height: 55rpx;
  width: 55rpx;
  margin-right: 3%;
}


.todo{
   flex:1;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}

.todo-title{
  flex:1;
}
.todo-deadline { 
  font-size: 30rpx;
  font-weight: 500;
  width:200rpx;
}
.todo-deadline-time{
  width:30rpx;
  display: none;
}


.add-todo {
  display: inline-block;
  position: fixed;
  bottom: 50rpx;
