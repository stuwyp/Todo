/* pages/user/trashbin/trashbin.wxss */
.main {
  background: #efeff4;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.section {
  margin-top: 10rpx;
}

.todo-section {
  border-bottom: #efeff4 1px solid;
  border-top: #d9d9d9 1px solid;
  background-color: #fff;
  margin-top: 5rpx;
}

.todo-section .item {
  box-sizing: border-box;
  text-align: left;
  color: #344349;
  font-size: 32rpx;
  padding-left: 3%;
  padding-right: 3%;
  position: relative;
}

.todo-section .item-inner {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
}

.todo-section .item:last-child .item-inner {
  border: none;
}

.status {
  color: #1f1f1f;
  font-size: 30rpx;
  margin: 30rpx;
}
.arrow {
  height: 28rpx;
  width: 28rpx;
}
.recover {
  float:left;
  height: 50rpx;
  width: 50rpx;
}
.delete{
  float:right;
  padding-top: 20rpx;
  height: 50rpx;
  width: 50rpx;
}

.todo{
   flex:1;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}

.todo-title{
  margin-left: 5%;
  flex:1;
}
.todo-deadline { 
  font-size: 30rpx;
  font-weight: 500;
  width:200rpx;
}