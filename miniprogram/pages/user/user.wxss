page {
  background: #f4f8fa;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  line-height: 60rpx;
  margin-bottom: 50rpx;
}

.login_button {
  width: 100%;
  height: 500rpx;
  text-align: center;
  line-height: 500rpx;
  color: #999;
  border-radius: 0;
}

.login_button:after {
  border-radius: 0;
  border: 0;
}

.item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  align-items: center;
  margin-bottom:5rpx;
}

.bg_grey {
  background: #efefef;
}

.item_line {
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.img40 {
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
}

.img40right {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
}
